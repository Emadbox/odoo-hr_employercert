<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_he_attendance_who" model="ir.ui.view">
            <field name="name">hr.employercert.attendance.tree</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.view_attendance_who"/>
            <field name="arch" type="xml">
                <field name="action" position="after">
                    <field name="working_hours_on_day" sum="Total Hours"/>
                    <field name="worked_hours" sum="Worked Hours"/>
                    <field name="over_hours" sum="Overtime Hours"/>
                    <field name="absent_hours" sum="Absent Hours"/>
                </field>
            </field>
        </record>

        <record id="view_he_attendance_form" model="ir.ui.view">
            <field name="name">hr.employercert.attendance.form</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.view_attendance_form"/>
            <field name="arch" type="xml">
                <field name="action_desc" position="after">
                    <field name="working_hours_on_day" string="Total Hours"/>
                    <field name="worked_hours" string="Worked Hours" sum="Worked Hours"/>
                    <field name="over_hours" string="Overtime Hours"/>
                    <field name="absent_hours" string="Absent Hours"/>
                </field>
<!--
                <sheet position="after">
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </sheet>
-->
            </field>
        </record>

    </data>
</openerp>
