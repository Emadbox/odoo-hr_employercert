                    <field name="absent_hours" sum="Absent Hours (h)"/>
-->
                    <field name="over_hours" sum="Overtime Hours (h)"/>
                </field>
            </field>
        </record>

<!--employee attendance form view-->
        <record id="view_he_attendance_form" model="ir.ui.view">
