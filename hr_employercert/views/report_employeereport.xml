<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_employeereport">
            <t t-call="report.html_container">
                <t t-call="report.internal_layout">
                    <div class="page">
                    <div class="oe_structure"/>
                        <table>
                        <img style="position: absolute; left: 0px; top: 0px; z-index: -1;" src="/hr_employercert/static/img/ai/arbetsgintyg1.png" width="594" height="840"/>
                        <img style="position: absolute; left: 0px; top: 840px; z-index: -1;" src="/hr_employercert/static/img/ai/arbetsgintyg2.png" width="594" height="840"/>    
                            <tr t-foreach="docs" t-as="e">
                                <td style="position: absolute; left: 80px; top: 90px;" t-esc="e.name"/>
                                <td style="position: absolute; left: 250px; top: 90px;" t-esc="e.name"/>
                                <td style="position: absolute; left: 420px; top: 90px;" t-esc="e.identification_id"/>
                                <td style="position: absolute; left: 190px; top: 145px;" t-esc="e.contract_ids[0].date_start"/>
                                <td style="position: absolute; left: 360px; top: 145px;" t-esc="e.contract_ids[0].date_end"/>
                                <td style="position: absolute; left: 190px; top: 168px;" t-esc="e.contract_ids[0].job_id.name"/>
                                <td style="position: absolute; left: 200px; top: 215px;" t-esc="e.contract_ids[0].working_hours.name"/>
                            </tr>
                        </table>
                        <table>
                            <tr t-foreach="report_table_first" t-as="a">
                                <td style="position: absolute; left: 110px; top: 988px;" t-esc="a['worked_hours']"/><td/>
                                <td style="position: absolute; left: 155px; top: 988px;" t-esc="a['absent_hours']"/><td/>
                                <td style="position: absolute; left: 220px; top: 988px;" t-esc="a['over_hours']"/><td/>
                            </tr>
                            <tr t-foreach="report_table_last" t-as="a">
                                <td style="position: absolute; left: 362px; top: 988px;" t-esc="a['worked_hours']"/><td/>
                                <td style="position: absolute; left: 408px; top: 988px;" t-esc="a['absent_hours']"/><td/>
                                <td style="position: absolute; left: 467px; top: 988px;" t-esc="a['over_hours']"/><td/>
                            </tr>
                       </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</openerp>



